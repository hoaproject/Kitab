{
    "name"       : "hoa/kitab",
    "description": "Kitab is the ideal companion for Documentation-Driven Quality: Render and Test your documentation.",
    "type"       : "library",
    "keywords"   : ["library", "documentation", "generate", "search", "test"],
    "homepage"   : "https://hoa-project.net/",
    "license"    : "BSD-3-Clause",
    "authors"    : [
        {
            "name" : "Ivan Enderlin",
            "email": "ivan.enderlin@hoa-project.net"
        }
    ],
    "require": {
        "php"              : ">=7.0",
        "atoum/atoum"      : "~3.0",
        "hoa/console"      : "~3.0",
        "hoa/dispatcher"   : "~1.0",
        "hoa/exception"    : "~1.0",
        "hoa/file"         : "~1.0, >=1.17.07.11",
        "hoa/protocol"     : "~1.0",
        "hoa/router"       : "~3.0",
        "hoa/view"         : "~3.0",
        "league/commonmark": "~0.15",
        "nikic/php-parser" : "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Kitab\\": "src/"
        },
        "files": ["src/Bootstrap.php"]
    },
    "bin"  : ["bin/kitab"],
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
